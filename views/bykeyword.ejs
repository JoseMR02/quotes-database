<%- include ('partials/header'); -%>
<div class='container'>
	<div class='jumbotron'>
		<h1> By keyword </h1>
		<form action='/keyword' method='GET'>
			<div class='form-group row'>
				<label for='keyword' class='col-sm-4 col-form-label'>Keyword: </label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='keyword' name='keyword' placeholder='Enter a word' required>
				</div>
			</div>
					<button class='btn btn-primary btn-block'>Search Quotes</button>
					<button class='btn btn-warning btn-block' onclick='location.href="/";' background-color='red'>Change Search Type</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
	</div>
</div>
<%- include ('partials/footer'); -%>